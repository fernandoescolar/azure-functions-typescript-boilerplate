{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "lib": ["dom","es2017"],
      "sourceMap": true,
      "allowJs": false,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "rootDir": "./src",
      "forceConsistentCasingInFileNames": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true,
      "strictNullChecks":false,
      "noImplicitAny": false,
      "downlevelIteration": true
    },
    "exclude": [
      "node_modules"
    ]
  }